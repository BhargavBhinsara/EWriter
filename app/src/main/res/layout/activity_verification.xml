<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    tools:context=".VerificationActivity">

    <ImageView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_email_black_24dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textSize="30dp"
        android:textColor="#2699FB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/email"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verification"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="0dp"
        android:text="Please enter your the verification code."
        android:textColor="#2699FB"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="5dp"
        android:text="We have send a verification code to your registered \nemail ID"
        android:textColor="#2699FB" />

    <LinearLayout
        android:id="@+id/lilay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <EditText
            android:id="@+id/code1"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:inputType="number"
            android:ems="10"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="#2699FB"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/code2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_edittext"
            android:inputType="number"
            android:ems="10"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="#2699FB"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/code3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_edittext"
            android:inputType="number"
            android:ems="10"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="#2699FB"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/code4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"
            android:inputType="number"
            android:ems="10"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="#2699FB"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lilay1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you didn't get the OTP?"
            android:textColor="#2699FB" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Resend OTP"
            android:textColor="#FF0000"/>
    </LinearLayout>

    <Button
        android:id="@+id/verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lilay1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_button"
        android:text="verify"
        android:textColor="#fff"
        android:textSize="20dp" />

</RelativeLayout>