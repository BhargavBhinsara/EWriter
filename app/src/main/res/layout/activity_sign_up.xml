<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    tools:context=".SignUpActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:background="#2699FB" />

    <TextView
        android:id="@+id/txtlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sign up"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtlogo"
        android:drawablePadding="20dp"
        android:background="@drawable/custom_edittext"
        android:hint="Uesr Name"
        android:inputType="text"
        android:textColor="#2699FB"
        android:textColorHint="#2699FB"
        android:ems="10"
        android:drawableLeft="@drawable/ic_action_user"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/custom_edittext"
        android:hint="Email ID"
        android:inputType="text"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_action_email"
        android:textColor="#2699FB"
        android:textColorHint="#2699FB"
        android:layout_below="@id/user_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"/>

    <EditText
        android:id="@+id/pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/custom_edittext"
        android:hint="Password"
        android:textColor="#2699FB"
        android:textColorHint="#2699FB"
        android:inputType="textPassword"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_action_lock"
        android:drawableRight="@drawable/ic_action_visible"
        android:layout_below="@id/email"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
/>

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pw"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_button"
        android:text="Sign Up"
        android:textColor="#fff"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/lilay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/signup_btn"
        android:layout_marginTop="30dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/gamil"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/gmail"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/fb"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/facbook"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/insta"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/instagram"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lilay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="214dp"
        android:text="Already have an account?"
        android:textColor="#2699FB" />


</RelativeLayout>