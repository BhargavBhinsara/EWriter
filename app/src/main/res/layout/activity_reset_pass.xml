<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    tools:context=".ResetPassActivity">

    <ImageView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_screen_lock_portrait_black_24dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/resetpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="30dp"
        android:textColor="#2699FB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/email"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your the verification code."
        android:textColor="#2699FB"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/resetpw"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="30dp"/>

    <EditText
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/custom_edittext"
        android:hint="New password"
        android:inputType="textPassword"
        android:textColor="#2699FB"
        android:textColorHint="#2699FB"
        android:drawableLeft="@drawable/ic_action_lock"
        android:drawablePadding="20dp"
        android:drawableRight="@drawable/ic_action_visible"
        android:layout_below="@+id/txt1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"/>

    <EditText
        android:id="@+id/pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:drawableLeft="@drawable/ic_action_lock"
        android:drawablePadding="20dp"
        android:drawableRight="@drawable/ic_action_visible"
        android:background="@drawable/custom_edittext"
        android:hint="confirm password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:textColor="#2699FB"
        android:textColorHint="#2699FB"
        android:layout_below="@+id/user_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"/>

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pw"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/custom_button"
        android:text="done"
        android:textColor="#fff"
        android:textSize="20dp" />

</RelativeLayout>