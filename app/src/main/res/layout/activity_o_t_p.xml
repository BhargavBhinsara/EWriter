<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPActivity">

    <ImageView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_email_black_24dp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:id="@+id/verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:textSize="30dp"
        android:textColor="#1F92ED"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/email"/>

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your the verification code."
        android:textColor="#1F92ED"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/verification"/>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We have send a verification code to your registered \nemail ID"
        android:textColor="#1F92ED"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txt1"/>

    <LinearLayout
        android:id="@+id/lilay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/txt2"
        android:layout_centerHorizontal="true"
        android:outlineAmbientShadowColor="@color/colorPrimaryDark"
        android:layout_marginTop="40dp">

    <EditText
        android:id="@+id/otp1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="#1F92ED"
        android:textColorHint="#1F92ED"
        android:layout_marginEnd="30dp"
        android:inputType="number"
        android:textAlignment="center"
        android:maxLength="1"
        android:background="@drawable/edittext_custom"/>

    <EditText
        android:id="@+id/otp2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="#1F92ED"
        android:textColorHint="#1F92ED"
        android:layout_marginEnd="30dp"
        android:textAlignment="center"
        android:inputType="number"
        android:background="@drawable/edittext_custom"/>

    <EditText
        android:id="@+id/otp3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="#1F92ED"
        android:textColorHint="#1F92ED"
        android:layout_marginEnd="30dp"
        android:textAlignment="center"
        android:inputType="number"
        android:background="@drawable/edittext_custom"/>

    <EditText
        android:id="@+id/otp4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textColor="#1F92ED"
        android:textColorHint="#1F92ED"
        android:textAlignment="center"
        android:maxLength="1"
        android:inputType="number"
        android:background="@drawable/edittext_custom"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lilay1"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="If you didn't get the OTP?"
            android:textColor="#1F92ED"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Resend OTP"
            android:textStyle="bold"
            android:textColor="#1F92ED"/>
    </LinearLayout>
    <Button
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="verify"
        android:textSize="20dp"
        android:textColor="#fff"
        android:layout_below="@+id/lilay1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/button"/>

</RelativeLayout>